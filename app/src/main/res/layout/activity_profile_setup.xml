<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_gradient">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_setup_photo_imageview"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:fontFamily="@font/helvetica_neue_thin"
        android:src="@drawable/ic_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/profile_setup_name_edittext"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/auth_field"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="#ADFFFFFF"
        android:textColorHint="#7EFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_setup_photo_imageview" />

    <Button
        android:id="@+id/profile_setup_proceed_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/auth_button"
        android:text="Proceed"
        android:textAllCaps="false"
        android:textColor="#7EFFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_setup_name_edittext"
        app:layout_constraintStart_toStartOf="@+id/profile_setup_name_edittext"
        app:layout_constraintTop_toBottomOf="@+id/profile_setup_name_edittext" />
</androidx.constraintlayout.widget.ConstraintLayout>