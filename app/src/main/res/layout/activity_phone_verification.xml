    <EditText
        android:gravity="center"
        android:background="@drawable/auth_field"
        android:padding="15dp"
        android:textColorHint="#7EFFFFFF"
        android:textColor="#ADFFFFFF"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone_verification_mobile_number_edittext"
        android:hint="Mobile Number"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/phone_verification_mobile_textview"
        app:layout_constraintEnd_toEndOf="@+id/phone_verification_mobile_textview"
        app:layout_constraintStart_toStartOf="@+id/phone_verification_mobile_textview"/>

    <Button
        android:textSize="18sp"
        android:background="@drawable/auth_button"
        android:textColor="#7EFFFFFF"
        android:textAllCaps="false"
        android:text="Send OTP"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:id="@+id/phone_send_otp_btn"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/phone_verification_mobile_number_edittext"
        app:layout_constraintStart_toStartOf="@+id/phone_verification_mobile_number_edittext"
        app:layout_constraintEnd_toEndOf="@+id/phone_verification_mobile_number_edittext"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/phone_resend_otp_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/auth_button"
        android:text="Re-Send OTP"
        android:textAllCaps="false"
        android:textColor="#7EFFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/phone_send_otp_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/phone_send_otp_btn"
        app:layout_constraintTop_toBottomOf="@+id/phone_send_otp_btn" />

