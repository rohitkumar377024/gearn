        app:layout_constraintStart_toStartOf="@+id/phone_resend_otp_btn"
        app:layout_constraintTop_toBottomOf="@+id/phone_resend_otp_btn" />

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/phone_verify_otp_btn"
